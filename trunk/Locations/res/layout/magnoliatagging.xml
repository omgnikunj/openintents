<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#f3f3cc">
<RelativeLayout 

			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:background="@drawable/magnoliabg3"
			>

		<ProgressBar android:id="@+id/magnoliatagging.progressbar"
			android:visibility="invisible"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			
		/>

		<TableLayout 
			android:id="@+id/magnoliatagging.ft1"
			android:layout_alignParentTop="true"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
		>
		<TableRow>
		    <TextView
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:layout_weight="0"
		        android:paddingBottom="4dip"
		        android:text="URI"
		        android:textColor="#933100"
		    />
			<EditText android:id="@+id/magnoliatagging.curi"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
		</TableRow>
		<TableRow>
			<TextView
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:layout_weight="0"
		        android:paddingBottom="4dip"
		        android:text="Description"
		        android:textColor="#933100"

		    />
			
			<EditText android:id="@+id/magnoliatagging.description"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				/>
				
		</TableRow>
		<TableRow>
			<TextView
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:layout_weight="0"
		        android:paddingBottom="4dip"
		        android:text="Tags"
		        android:textColor="#933100"

		    />
			
			<EditText android:id="@+id/magnoliatagging.outboundtags"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				/>
				
		</TableRow>

		<TableRow>
			<LinearLayout 
			android:orientation="horizontal"			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
				<TextView
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="0"
					android:paddingBottom="4dip"
					android:textColor="#933100"
					android:text="shared"
					/>
				<CheckBox android:id="@+id/magnoliatagging.shared"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						/>
			</LinearLayout>
			<LinearLayout 
				android:orientation="horizontal"			
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>			
				<Button android:id="@+id/magnoliatagging.cancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 				
					android:text="cancel" />
				<Button android:id="@+id/magnoliatagging.save"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 				
					android:text="save" />
			</LinearLayout>
		</TableRow>

		<TableRow>

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
			        android:textColor="#933100"
					android:text="@string/list_of_tags" />

				<Spinner android:id="@+id/magnoliatagging.tagfilter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
	</TableRow>
	</TableLayout>
	
	<LinearLayout 
			android:orientation="horizontal"
			android:layout_below="@id/magnoliatagging.ft1"
			android:layout_width="fill_parent"
			android:layout_height="300px">
		<ListView android:id="@+id/magnoliatagging.tags" 
					android:layout_width="500px"
					android:layout_height="300px"  
					android:textColor="#933100"

					/>	
	</LinearLayout>
	

