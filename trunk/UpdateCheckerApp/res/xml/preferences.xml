<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
            android:key="auto_update"
            android:defaultValue="true"
            android:title="@string/preference_auto_update"
            android:summary="@string/preference_auto_update_summary" />
    
    <ListPreference
            android:key="update_interval"
            android:defaultValue="604800000"
            android:title="@string/title_update_interval"
            android:summary="@string/summary_update_interval"
            android:entries="@array/entries_update_interval"
            android:entryValues="@array/entryvalues_update_interval"
            android:dialogTitle="@string/dialog_title_update_interval" />

    <CheckBoxPreference
            android:key="andappstore"
            android:defaultValue="true"
            android:title="@string/preference_andappstore"
            android:summary="@string/preference_andappstore_summary" />

</PreferenceScreen>